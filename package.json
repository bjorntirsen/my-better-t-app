{
	"name": "my-better-t-app",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"type": "module",
	"scripts": {
		"check": "biome check --write .",
		"prepare": "husky",
		"dev": "turbo dev",
		"build": "turbo build",
		"check-types": "turbo check-types",
		"dev:native": "turbo -F native dev",
		"dev:web": "turbo -F web dev",
		"dev:server": "turbo -F server dev",
		"db:push": "turbo -F @my-better-t-app/db db:push",
		"db:studio": "turbo -F @my-better-t-app/db db:studio",
		"db:generate": "turbo -F @my-better-t-app/db db:generate",
		"db:migrate": "turbo -F @my-better-t-app/db db:migrate",
		"db:local": "turbo -F @my-better-t-app/db db:local"
	},
	"dependencies": {
		"dotenv": "catalog:",
		"zod": "catalog:",
		"@my-better-t-app/env": "workspace:*"
	},
	"devDependencies": {
		"turbo": "^2.6.3",
		"@biomejs/biome": "^2.2.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.2",
		"typescript": "^5",
		"@types/node": "^22.13.14",
		"@my-better-t-app/config": "workspace:*"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --write ."
		]
	},
	"packageManager": "pnpm@10.15.1"
}
